datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model FamMembers {
    id         String  @id @unique @default(uuid())
    FMfamId    String? @default(uuid())
    FMparentId String? @default(uuid())
    authorId   String

    FM_name      String
    FM_dp        String?
    FM_isAlive   Boolean? @default(true)
    FM_dob       String?
    FM_Petname   String?
    FM_Professon String?
    FM_loc       String?

    canDelete Boolean? @default(true)

    images modSpaces[]
}

model modSpaces {
    id       String @id @unique @default(uuid())
    filename String

    famMember FamMembers @relation(fields: [authorId], references: [id])
    authorId  String

    @@index([authorId])
}
